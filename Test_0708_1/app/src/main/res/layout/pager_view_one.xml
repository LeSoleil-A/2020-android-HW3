<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/page_txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the first page."
        android:textColor="@color/rainbow_blue"
        android:textSize="@dimen/materialcolorpicker__activity_horizontal_margin"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/page_img_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/cai" />

</LinearLayout>